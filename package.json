{
  "name": "messengram",
  "productName": "Messengram",
  "version": "1.0.0",
  "description": "Messenger and Instagram combined under a single cross-platform app.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron ."
  },
  "author": "Stavros Melidoniotis <melidon.stavros@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^16.0.7"
  },
  "build": {
    "productName": "Messengram",
    "appId": "gr.stavros_melidoniotis.${name}",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "deb",
      "icon": "build/icon.icns",
      "synopsis": "Messenger and Instagram combined under a single cross-platform app.",
      "category": "InstantMessaging"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "dmg",
      "icon": "build/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
